<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="309dp"
        android:layout_height="44dp"
        android:layout_marginTop="292dp"
        android:contentDescription="@string/email"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/email"></EditText>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="309dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/contraseña"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
        tools:text="@string/contraseña"></EditText>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="309dp"
        android:layout_height="43dp"
        android:layout_marginBottom="20dp"
        android:background="#5e24c3"
        android:contentDescription="@string/iniciar_sesion"
        android:text="@string/iniciar_sesion"
        android:textColor="#ffff"
        app:layout_constraintBottom_toTopOf="@+id/btnSendToRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
        app:layout_constraintVertical_bias="1.0"></Button>

    <Button
        android:id="@+id/btnSendToRegister"
        android:layout_width="309dp"
        android:layout_height="43dp"
        android:layout_marginBottom="120dp"
        android:background="#5e24c3"
        android:contentDescription="@string/crear_cuenta"
        android:text="@string/crear_cuenta"
        android:textColor="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></Button>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="129dp"
        android:layout_height="136"
        android:contentDescription="@string/fotos"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.275"
        app:srcCompat="@drawable/logo_small_icon_only_inverted" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="374dp"
        android:layout_height="64dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/fotos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_letra_morado" />


</androidx.constraintlayout.widget.ConstraintLayout>